@model IEnumerable<Blog.Models.Blog>

@{
    ViewBag.Title = "Index";
}

<h2>Blog List</h2>
<hr />

@if (TempData["Blog"] != null)
{
    var blog = (Blog.Models.Blog)TempData["Blog"];

    <div class="alert alert-success" role="alert">
        <strong><span class="glyphicon glyphicon-ok"></span>   @blog.Title</strong>  Your Blog Is Updated...
    </div>
}

<p>
    @Html.ActionLink("Create New Blog", "Create", null, new { @class = "btn btn-primary" })
</p>
<hr />

<table class="table table-bordered table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.Explanation)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Picture)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.Content)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.AddedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsApproval)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Homepage)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.Explanation)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Picture)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.AddedDate)
            </td>
            <td>
                @if (item.IsApproval)
                {
                    <label class="label label-success">Approved</label>
                }
                else
                {
                    <label class="label label-danger">Waiting Approval</label>
                }
            </td>
            <td>
                @if (item.Homepage)
                {
                    <label class="label label-success">Homepage</label>
                }
                else
                {
                    <label class="label label-danger">Not Homepage</label>
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-xs" })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
            </td>
        </tr>
    }

</table>
