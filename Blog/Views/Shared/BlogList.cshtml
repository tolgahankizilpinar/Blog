@model IEnumerable<Blog.Models.BlogModel>


@if (Model.Count() == 0)
{
    <div class="alert alert-warning">
        <h3>Records Not Found...</h3>
    </div>
}
else
{
    foreach (var item in Model)
    {
        <div class="blog">
            <h3 class="page-header" style="color:blue">
                @item.Title
            </h3>
            <p>
                <span class="glyphicon glyphicon-time"></span>
                @item.AddedDate
            </p>
            <hr />
            <img class="img-responsive" src="https://craftypixels.com/placeholder-image/900x300/09f.png/fff" />
            <hr />
            <p>
                @item.Explanation
            </p>
            @Html.ActionLink("More...", "Details", "Blog", new { id = item.Id }, new { @class = "btn btn-primary" })
        </div>
    }
}

